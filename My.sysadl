			port def CTemperatureOPT {
				flow out ValueTypes.CelsiusTemperature
			}
			port def CTemperatureIPT {
				flow in ValueTypes.CelsiusTemperature
			}
			port def CommandIPT {
				flow in ValueTypes.Command
			}
			port def CommandOPT {
				flow out ValueTypes.Command
			}
			port def PresenceIPT {
